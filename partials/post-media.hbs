{{#if feature_image}}
    <figure class="post-media{{#unless small_image}} container large{{/unless}}">
        <div class="u-placeholder{{#if same_height}} same-height {{ratio}}{{/if}}">
            <a class="post-image-link" href="{{url}}">
                <img class="post-image lazyload{{#if same_height}} u-object-fit{{/if}}"
                    {{#if static_image}}
                    src="{{img_url feature_image size="m"}}" {{else}}
                    data-srcset="{{img_url feature_image size="s"}} 400w, {{img_url feature_image size="m"}} 750w, {{img_url feature_image size="l"}} 960w, {{img_url feature_image size="xl"}} 1140w, {{img_url feature_image size="xxl"}} 1920w"
                    src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                    {{/if}} data-sizes="auto" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
            </a>
        </div>

        {{#if with_caption}}
            {{#if feature_image_caption}}
                <figcaption>{{feature_image_caption}}</figcaption>
            {{/if}}
        {{/if}}
    </figure>
{{/if}}